DEFINES=
UASMARGS=-omf  -3 -e3 $(DEFINES)

all: PLAND.o SDEV.o SHOW.o STONES.o

PLAND.o: FANTASIE.ASM PLAND.ASM
	uasm $(UASMARGS) -Dbana=1 $<
	mv FANTASIE.o PLAND.o

SDEV.o: FANTASIE.ASM SDEV.ASM
	uasm $(UASMARGS) -DSDEV=2 $<
	mv FANTASIE.o SDEV.o

SHOW.o: FANTASIE.ASM SHOW.ASM
	uasm $(UASMARGS) -Dbana=3 $<

STONES.o: FANTASIE.ASM STONES.ASM
	uasm $(UASMARGS) -Dbana=4 $<
